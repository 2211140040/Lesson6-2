<h1>商品一覧</h1>

<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @products.each do |pr| %>
  <p>
      <%= pr.name %>（￥<%= pr.price %>）　
    　<%= link_to '削除', product_path(pr), data: { turbo_method: :delete } %>
    　<%= link_to 'カートに追加', new_cart_item_path(product_id: pr.id) %>
　</p>
<% end %>

<%= link_to '商品を追加する', new_product_path %>
<%= link_to 'カートを見る', cart_path(current_cart) %>